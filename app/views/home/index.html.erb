<script>
  async function getPrice() {
  try {
    const response = await fetch('https://api.odin.fun/v1/token/2lfq');
    const data = await response.json();
    const price = data.price;
    document.getElementById('price_sat').textContent = price/1000;
    const satoshis = price / 1000;
    const marketcap = data.marketcap;
    const volume = data.volume;
    const holders = data.holder_count;
    const txns = data.txn_count;
    document.getElementById('marketcap').textContent = (marketcap/100000000000).toFixed(2);
    document.getElementById('volume').textContent = (volume/100000000000).toFixed(2);
    document.getElementById('holders').textContent = holders;
    document.getElementById('txns').textContent = txns;

    const btcResponse = await fetch('https://api.odin.fun/v1/currency/btc');
    const btcData = await btcResponse.json();
    const btcPriceUSD = btcData.amount;
    console.log('1 BTC =', btcPriceUSD, 'USD');

    const satoshiPriceUSD = btcPriceUSD / 100000000;
    console.log('1 Satoshi =', satoshiPriceUSD, 'USD');

    const usdValue = satoshis * satoshiPriceUSD;
    document.getElementById('price_usd').textContent = usdValue.toFixed(5);
    console.log(`${satoshis} Satoshis =`, usdValue, 'USD');
  } catch (error) {
    console.error('Error fetching price:', error);
  }
}

getPrice();
</script>